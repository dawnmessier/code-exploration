<% @page_title = "Admin Users" %>

<div class="admin_users index">
  <h2>Admin Users</h2>

  <p><%= link_to("<< BACK TO ADMIN MENU", admin_path, :class => 'back-link') %></p>

  <p><%= image_tag('plus_sign.png', :size => '11x11', :alt => '+') %>
      <%= link_to("Add New Admin User", new_admin_user_path, :class => 'action new') %></p>

      <p><%= pluralize(@admin_users.size, 'admin user')%> found</p>

  <table class="listing" summary="Admin Users list">
    <tr class="header">
      <th>Name</th>
      <th>Email</th>
      <th>Username</th>
      <th>Actions</th>
    </tr>
    <% @admin_users.each do |user| %>
    <tr>
      <td><%= user.fullname %></td>
      <td><%= mail_to(user.email) %></td>
      <td><%= user.username %></td>
      <td class="actions">
        <%= link_to("Edit", edit_admin_user_path(user), :class => 'action edit') %>
        <%= link_to("Delete", delete_admin_user_path(user), :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>

<% @page_title = "All Sections" %>

<div class="sections index">
  <h2>Sections</h2>

  <p><%= link_to("<< BACK TO PAGES", pages_path(:subject_id => @page.subject_id), :class => 'back-link') %></p>

  <p><%= image_tag('plus_sign.png', :size => '11x11', :alt => '+') %>
  <%= link_to("Add New Section", new_section_path(:page_id => @page.id), :class => 'action new') %></p>

  <table class="listing" summary="Section list">
    <tr class="header">
      <th>#</th>
      <th>Page Id</th>
      <th>Section</th>
      <th>Visible</th>
      <th>Actions</th>
    </tr>
    <% @sections.each do |section| %>
    <tr>
      <td><%= section.position %></td>
      <td class="center"><%= section.page_id %></td>
      <td><%= section.name %></td>
      <td class="center"><%= status_tag(section.visible) %></td>
      <td class="actions">
        <%= link_to("Show", section_path(section, :page_id => @page.id), :class => 'action show') %>
        <%= link_to("Edit", edit_section_path(section, :page_id => @page.id), :class => 'action edit') %>
        <%= link_to("Delete", delete_section_path(section, :page_id => @page.id), :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
